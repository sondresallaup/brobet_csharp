@model Brobet.ViewModels.MessageListViewModel

@{
    ViewBag.Title = "Messages";
}

<div class="message-list">
    <div class="body-container">
        <ul>
            @foreach (var friendship in Model.friendships)
            {
                <li>
                    <a class="partial-href" href="/Message/Friendship/@friendship.id" data-partial-href="/Message/FriendshipPartial/@friendship.id">
                        <div class="profile-image">
                            <img src="@friendship.friendAvatarUrl" />
                        </div>
                        <div class="username">
                            <div class="text">
                                @friendship.friendName
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>